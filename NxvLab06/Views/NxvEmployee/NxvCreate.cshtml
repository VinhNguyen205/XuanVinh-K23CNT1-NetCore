@model NxvLab06.Models.NxvEmployee

@{
    ViewData["Title"] = "Thêm mới nhân viên";
}

<h2>Thêm mới Nhân viên</h2>

<form asp-action="NxvCreateSubmit" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="NxvName" class="form-label">Họ tên</label>
        <input asp-for="NxvName" class="form-control" required />
        <span asp-validation-for="NxvName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NxvBirthDay" class="form-label">Ngày sinh</label>
        <input asp-for="NxvBirthDay" type="date" class="form-control" required />
        <span asp-validation-for="NxvBirthDay" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NxvEmail" class="form-label">Email</label>
        <input asp-for="NxvEmail" class="form-control" type="email" required />
        <span asp-validation-for="NxvEmail" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NxvPhone" class="form-label">Điện thoại</label>
        <input asp-for="NxvPhone" class="form-control" required />
        <span asp-validation-for="NxvPhone" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NxvSalary" class="form-label">Lương</label>
        <input asp-for="NxvSalary" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="NxvSalary" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="NxvStatus" type="checkbox" class="form-check-input" />
        <label class="form-check-label" asp-for="NxvStatus">Đang làm</label>
        <span asp-validation-for="NxvStatus" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a class="btn btn-secondary" asp-action="NxvIndex">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}