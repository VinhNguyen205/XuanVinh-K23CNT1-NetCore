                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NxvStatus" /> @Html.DisplayNameFor(model => model.NxvStatus)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="NxvIndex">Back to List</a>
</div>

